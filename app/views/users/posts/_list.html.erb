<p><h3> Blogs </h3></p>
<% if posts.present? %>
  <table class="table">
    <thead class="table-dark">
      <tr>
        <th scope="col">Blog By</th>
        <th scope="col">Created On</th>
        <th scope="col">Title</th>
        <th scope="col">  Open</th>
      </tr>
    </thead>
    
    <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= post.user.email %></td>
        <td><%= post.created_at %></td>
        <td><%= post.title %></td>
        <td><%= link_to 'Show', users_post_path(post.id) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<%end%>
