<div class="container" style="margin-top: 30px;">
  <%= form_with model: @post, local: true, url: users_posts_path do |f| %>
    <%= f.label :title %>
    <p><%= f.text_field :title, class: "form-control"%></p>
    <p><%= f.text_area :description, class: "form-control", placeholder: "Blog content", rows: 15 %></p>
    <p><%= f.submit "Add Blog",class: "btn btn-primary" %></p>
  <%end%>
</div>
